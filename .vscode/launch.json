            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "redirectOutput": true,
            "python": "C:\\Users\\admin\\scoop\\apps\\python\\current\\python.exe"
        },
        {
            "name": "FreeCAD Python 脚本调试",
            "type": "debugpy",
            "request": "launch",
